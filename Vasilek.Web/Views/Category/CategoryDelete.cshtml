@model Vasilek.Web.Models.CategoryDtoBase


<form asp-action="CategoryDelete">

    <input asp-for="CategoryId" hidden />

    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удалить Категорию</h1>

        <hr />
        <div class="row">


            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">
                <a asp-action="CategoryIndex" class="btn btn-outline-primary form-control">Вернуться</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Удалить" class="btn btn-outline-primary form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
