@model IEnumerable<Vasilek.Web.Models.CategoryDtoBase>

    <br /><br />

    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col ">
                <h1 class="text-primary"> Список категорий </h1>
            </div>

            <div class="col text-end pt-1">
                <a asp-action="CategoryCreate" class="btn btn-outline-primary">
                    <i class="fas fa-plus"></i> Создать новую категорию </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Названия категории
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                      <tr>
                        <td>
                            @item.CategoryName
                        </td>
                     
                        <td class="col text-end pt-1">
                            <a asp-action="CategoryEdit" class="btn btn-outline-primary" 
                            asp-route-categoryId="@item.CategoryId">
                            <i class="fas fa-edit"></i>
                            </a>

                             <a asp-action="CategoryDelete" class="btn btn-outline-primary" 
                            asp-route-categoryId="@item.CategoryId">
                            <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>