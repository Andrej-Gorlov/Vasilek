@model LoginViewModel

<div class="login-page">
    <div class="lead">
        <h1>Авторизоваться</h1>
        <p>Выберите способ входа</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2> Локальная учетная запись </h2>
                    </div>

                    <div class="card-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Username"> Имя пользователя </label>
                                <input class="form-control" placeholder="Имя пользователя" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"> Пароль </label>
                                <input type="password" class="form-control" placeholder="Пароль" asp-for="Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label" asp-for="RememberLogin">
                                            Запомнить мой логин
                                        </label>
                                    </div>
                                </div>
                            }
                            <button class="btn btn-outline-primary form-control" name="button" value="login">Авторизоваться</button>
                            @*<hr />
                            <button class="btn btn-outline-primary form-control" name="button" value="cancel">Отмена</button>*@
                        </form>
                    </div>

                     <div class="card-footer">
                         <a href="@Url.Action("Register",new {Model.ReturnUrl })">Новый пользователь/Регистрация</a>
                    </div>

                </div>
            </div>
        }

        @if (Model.VisibleExternalProviders.Any())
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>External Account</h2>
                    </div>
                    <div class="card-body">
                        <ul class="list-inline">
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                <li class="list-inline-item">
                                    <a class="btn btn-secondary"
                                       asp-controller="External"
                                       asp-action="Challenge"
                                       asp-route-scheme="@provider.AuthenticationScheme"
                                       asp-route-returnUrl="@Model.ReturnUrl">
                                        @provider.DisplayName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>Неверный запрос на вход</strong>
                Для этого запроса не настроены схемы входа.
            </div>
        }
    </div>
</div>