@model Vasilek.Services.Identity.MainModule.Account.RegisterViewModel

<div class="login-page">
    <div class="lead">
        <h1> Регистрация </h1>
        <p> Выберите способ регистрации </p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2> Регистрация локальной учетной записи </h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Ник пользователя" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" placeholder="Имя" asp-for="FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input class="form-control" placeholder="Фамилия" asp-for="LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Пароль" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName"></label>
                            <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
                        </div>

                        <hr />
                        <button class="btn btn-outline-primary form-control" name="button" value="Register">Регистрация</button>
                        <hr />
                        <a href="@Url.Action("Login",new {Model.ReturnUrl})" class="btn btn-outline-primary form-control"> Назад </a>
                    
                    </form>
                </div>

            </div>
        </div>


    </div>
</div>